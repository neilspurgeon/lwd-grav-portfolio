{% extends 'partials/base.html.twig' %}

{% block content %}
  {{ page.content }}

  <div class="work-grid">
    {% for p in page.find('/work').children %}
      <a href="{{ p.url }}">
        {% set thumb = p.media.images['thumbnail.jpg'] %}
        <div class="grid-item {{ p.header.thumbnail_size }}" style="background-image:url('{{ thumb.url }}')">
          <div class="grid-project-title">
            <span class="client">{{ p.header.client }}</span>
            <span class="title">{{ p.title }}</span>
          </div>
        </div>
        
      </a>
    {% endfor %}
  </div>
{% endblock %}


